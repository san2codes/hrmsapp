<div class="d-flex flex-row">
<%=render "home/options" %>
<div>
<% @employee_details.each do |ed| %>
<div class="detail-cont">
<div class="border border-primary"><p>Contact No:<%= ed.contact_no%></p></div>
<div class="border border-primary"><p>Emergency Contact No :<%= ed.emergency_contact_no%></p></div>
<div class="border border-primary"><p>Designation Id :<%= ed.designation_id%></p></div>
<div class="border border-primary"><p>Employee Id :<%= ed.employee_id%></p></div>
<div class="border border-primary"><p>Manager Id :<%= ed.manager_id%></p></div>
<div class="border border-primary"><p>Blood Group:<%= ed.blood_group%></p></div>
<div class="border border-primary"><p>Work Experience:<%= ed.work_experience%></p></div>
<%= button_to edit_employee_detail_path(ed),method: :get, class: "loginbtn mt-3", data: { turbo_frame: "remote_modal" } do%>
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
</svg>
</div>
<% end %>
<% end %>
</div>

<div>
<% @addresses.each do |address| %>
    <div class="detail-cont">
    <div class="border border-primary"><p>Street :<%= address.street%></p></div>
    <div class="border border-primary"><p>City :<%= address.city%></p></div>
    <div class="border border-primary"><p>State :<%= address.state%></p></div>
    <div class="border border-primary"><p>Pincode :<%= address.pincode%></p></div>
    <div class="border border-primary"><p>Country :<%= address.country%></p></div>
    <div class="border border-primary"><p>Employee_id:<%= address.employee_id%></p></div>

    <%= button_to edit_address_path(address),method: :get, class: "loginbtn mt-5", data: { turbo_frame: "remote_modal" } do%>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
    </svg>
    <% end %>
    </div>
<% end %>
</div>

</div>
